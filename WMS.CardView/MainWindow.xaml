<Window x:Class="WMS.CardView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window"
        WindowState="Maximized"
        Background="White"
        WindowStyle="SingleBorderWindow">

    <Grid>
        <Border Background="LightGray" Margin="20" CornerRadius="10">
            <ContentControl Content="{Binding CardViewInstance}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>